<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#033F63"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/menu" />

        <ImageView
            android:id="@+id/marketplace"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/marketplace" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/marketplace"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="35dp"
            android:text="Cars On Sale!"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/l1"
        android:background="@drawable/mcarfix_bg">

        <Button
            android:id="@+id/stolen"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/oval"
            android:text="Vehicles Reported Stolen"
            android:textAllCaps="false"
            android:textColor="#123B53" />

        <LinearLayout
            android:id="@+id/g1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stolen"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icon1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Purchase Part"
                    android:textColor="#123B53" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icon2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Book Service"
                    android:textColor="#123B53" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>


        <Button
            android:id="@+id/service"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/g1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120px"
            android:background="@drawable/rounded_corner"
            android:text="Service Checklist"
            android:textAllCaps="false" />

        <LinearLayout
            android:id="@+id/g2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icon3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Auto Garage"
                    android:textColor="#123B53" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icon4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Mechanics"
                    android:textColor="#123B53" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/booking"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/g2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120px"
            android:background="@drawable/oval"
            android:text="Requested Bookings"
            android:textAllCaps="false"
            android:textColor="#123B53" />


    </RelativeLayout>

</RelativeLayout>